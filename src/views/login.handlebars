    <div class="form-signin w-100 m-auto mainnn">
        <div class="separador m-0 mb-3"></div>
        <form id="loginForm">

            <div class="form-floating">
                <input name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating">
                <input name="password" type="password" class="form-control" id="floatingPassword"
                    placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <p>¿No estás registrado? <a href="/register">Regístrate aquí</a></p>
                </label>
            </div>
            <input class="w-100 btn btn-lg btn-primary" type="submit" value="Inicia sesión">
            <div class="mt-4">
                <a href="/link-password">¿Haz olvidado tu contraseña?</a>
            </div>
        </form>
    </div>
</div>


