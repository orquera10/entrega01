<div class="row container-fluid m-0 p-0">
    <h1 class="col-12 text-center">Productos</h1>
    <div class="col-12 d-flex justify-content-center flex-wrap m-0 p-0" id="container">
        {{#each this.payload}}
        <div class="card col-4 m-4" style="width: 18rem;">
            <div class="card-body text-center">
                <h4 class="card-subtitle mb-2 text-body-secondary">ID: {{this._id}}</h4>
                <h5 class="card-title">{{this.title}}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Category: {{this.category}}</h6>
                <p class="card-text m-1">Description: {{this.description}}</p>
                <p class="card-text m-1">Code: {{this.code}}</p>
                <p class="card-text font-weight-bold m-1">Price: {{this.price}}</p>
                <p class="card-text m-1">Stock: {{this.stock}}</p>
                <p class="card-text m-1">Satus: {{this.status}}</p>
                <button data-pid="{{this._id}}" class="btn btn-primary postButton">Agregar al Carrito</button>
                
            </div>
        </div>
        
        {{/each}}
    </div>
    {{#if this.hasPrevPage}}
    <a href={{this.prevLink}}><button>Anterior</button></a>
    {{/if}}

    {{#if this.hasNextPage}}
    <a href={{this.nextLink}}><button>Siguiente</button></a>
    {{/if}}
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="./js/btnProd.js"></script>

